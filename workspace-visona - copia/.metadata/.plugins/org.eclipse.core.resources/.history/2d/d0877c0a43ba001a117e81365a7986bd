package cl.inacap.microserviciolibrerias.services;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import cl.inacap.microservicioproducto.entity.Producto;
import cl.inacap.microservicioproducto.repository.ProductoRepository;


@Service
public class ProductoServiceImpl<E, R extends CrudRepository<E, Long>> implements ProductoService<E> {

	
	@Autowired
	private R repository;
	@Override
	@Transactional(readOnly=true)
	public Iterable<E> finAll() {
		// TODO Auto-generated method stub
		return repository.findAll();
	}

	@Override
	@Transactional(readOnly=true)
	public Optional<E> findbyId(Long id) {
		// TODO Auto-generated method stub
		return repository.findById(id);
		
	}

	@Override
	@Transactional
	public E save(E producto) {
		// TODO Auto-generated method stub
		return repository.save(producto);
	}

	@Override
	@Transactional
	public void deleteById(Long id) {
		// TODO Auto-generated method stub
		repository.deleteById(id);

	}

}
